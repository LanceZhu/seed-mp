<view class='device' style='height: {{ winHeight*ratio}}rpx' wx:if="{{permission}}">
  <header></header>
  <view class='program'>
  <scroll-view scroll-y style="height:{{winHeight - 150}}px">
    <view class='content'>
      <view wx:for="{{programs}}" wx:key="program" class='box' bindtap='jumpToDetail' data-id='{{item.id}}'>
        <image src='/images/{{item.img}}' class='software'></image>
        <view class='text'>
          <view class='title'>{{item.title}}</view>
          <view class='subtitle'>
            <text>{{item.subtitle}}</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  </view>
</view>
<view wx:if="{{!permission}}">
  <header></header>
  <view class='content_no_permission'>未授权用户，功能不开放</view>
</view>