.device{
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content{
  background: #F2F2F2;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-wrap:wrap;
}

.content .user{
  background: white;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.content .user .image{
  display: block;
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.content .user .name{
  font-size:18px;
}

.content .user .detail{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 530rpx;
  height: 160rpx;
  font-size:50rpx;
}

button::after {
  border: none;
}

button {
  background-color: #fff;
  display: inline-block;
  font-size: inherit;
  margin: 0;
  padding: 0;
  line-height: inherit;
  width: 100%;
  text-align: left;
}
