<view class='device'>
  <header></header>
  <view class='content'>
    <!-- user -->
    <view class='user'>
      <image class='image' src='{{userInfo.avatarUrl}}'></image>    
      <view class = 'detail'> 
        <view class='name'>{{userInfo.nickName}}</view>   
        <!--
        <view class='id'>id:123456 {{mine.UAccuarcy}}</view>
        <view class = 'detail-two'>
          <view class = 'learned'>做题：120h{{mine.ULearned}}              </view>
          <view class = 'badge'>等级：Lv0{{mine.UBadge}}</view>
        </view>
        -->
      </view>
    </view>
     <van-cell-group title="功能">
      <van-cell
        is-link
        wx:for="{{apps}}"
        wx:key="index"
        title="{{item.desc}}"
        icon="{{item.icon}}"
        link-type="navigateTo"
        url="{{item.url}}"/>
     </van-cell-group>
     <van-cell-group title="其他">
      <van-cell
        is-link
        wx:for="{{utils}}"
        wx:key="index"
        title="{{item.desc}}"
        icon="{{item.icon}}"
        link-type="navigateTo"
        url="{{item.url}}"/>
     </van-cell-group>
  </view>
</view>
